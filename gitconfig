[color]
  diff          = auto
  status        = auto
  branch        = auto
  interactive   = auto
  ui            = true
  pager         = true

[alias]
  d             = diff
  co            = checkout
  st            = status
  br            = branch
  ls            = log --pretty=format:'%C(yellow)%h%Creset %ar | %Cgreen%an%Creset - %s'
  ci            = commit
  cia           = commit --all
  cic           = commit --amend
  ciac          = commit --all --amend
  rb            = rebase
  rbi           = rebase -i
  
[core]
  excludesfile  = ~/.gitignore    # Path must be explicit if gitv < 1.6.5.5
  editor        = mate -w         # OS X only, for TextMate
                    