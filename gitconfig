[color]
  diff          = auto
  status        = auto
  branch        = auto
  interactive   = auto
  ui            = true
  pager         = true
  
[alias]
  d             = diff
  co            = checkout
  st            = status -sb
  sts           = status
  br            = branch
  ls            = log --pretty=format:'%C(yellow)%h%Creset %ar\t| %Cgreen%an%Creset - %s'
  lg            = log --graph --pretty=format:'%C(yellow)%h%Creset -%C(red)%d%Creset %s | %C(blue)%an, %C(green)%cr %C(reset)' --abbrev-commit
  lsmy          = !(git ls --author="$(git config user.email)")
  wc            = whatchanged -p --abbrev-commit --pretty=medium
  ci            = commit
  cia           = commit --all
  cic           = commit --amend
  ciac          = commit --all --amend
  rb            = rebase
  rbi           = rebase -i
  mg            = merge --no-edit
  prb           = pull --rebase
  sprb          = !(git stash -u && git pull --rebase && git stash pop)
  authors       = shortlog -s

[rerere]
  enabled = 1

[grep]
  lineNumber = true

[core]
  excludesfile  = ~/.gitignore    # Path must be explicit if gitv < 1.6.5.5
  editor        = subl -w         # Sublime Text needed here
