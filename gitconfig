[color]
  diff          = auto
  status        = auto
  branch        = auto
  interactive   = auto
  ui            = true
  pager         = true

[alias]
  d             = diff
  co            = checkout
  st            = status
  br            = branch
  ci            = commit
  cia           = commit --all

[core]
  excludesfile  = ~/.gitignore    # Path must be explicit if gitv < 1.6.5.5
  editor        = mate -w         # OS X only, for TextMate
                    