[color]
  diff          = auto
  status        = auto
  branch        = auto
  interactive   = auto
  ui            = true
  pager         = true

[alias]
  d             = diff
  co            = checkout
  st            = status -sb
  sts           = status
  br            = branch
  ls            = log --pretty=format:'%C(yellow)%h%Creset %ar\t| %Cgreen%an%Creset - %s'
  lg            = log --graph --pretty=format:'%C(yellow)%h%Creset -%C(red)%d%Creset %s | %C(blue)%an, %C(green)%cr %C(reset)' --abbrev-commit
  lsmy          = !(git ls --author="$(git config user.email)")
  ci            = commit
  cia           = commit --all
  cic           = commit --amend
  ciac          = commit --all --amend
  rb            = rebase
  rbi           = rebase -i

[rerere]
  enabled = 1

[push]
  # Push only current branch to its upstream branch
  default = matching # upstream

[core]
  excludesfile  = ~/.gitignore    # Path must be explicit if gitv < 1.6.5.5
  editor        = mate -w         # OS X only, for TextMate